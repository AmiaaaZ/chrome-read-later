{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "key-spacing": [
      "error",
      {
        "mode": "minimum",
        "align": "value"
      }
    ]
  }
}
